<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >
    <ImageView
        android:id="@+id/iv_imageTips1"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds ="true"
        android:background="@drawable/tips1"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="ROOMS' DETAILS"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#0F4C75"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_imageTips1"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="You can monitor the gas concentration in each room and take appropriate actions."
        android:textSize="21dp"
        android:textColor="#0F4C75"
        android:gravity="center_horizontal|top"
        />
</LinearLayout>