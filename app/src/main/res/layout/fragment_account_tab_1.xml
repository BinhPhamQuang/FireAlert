<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Information"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#0F4C75"
        android:gravity="left"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Account"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="#3282B8"
        android:gravity="right"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:text="Hello Binh Pham !"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/dark"
        android:gravity="center|center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Your name:"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/dark"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/textbox2"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/background"
                android:layout_marginTop="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_below="@id/ll_name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Your address:"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/dark"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/textbox2"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/background"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Make sure you set the correct address!"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#EF4F4F"
                android:gravity="top"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_below="@id/ll_name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Your phone number:"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@color/dark"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:background="@drawable/textbox2"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/background"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Make sure you set the correct phone number!"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#EF4F4F"
                android:gravity="top"
                />
        </LinearLayout>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/btn_saveChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_phone"
            android:background="@drawable/layout_button"
            app:backgroundTint="#3282B8"
            android:text="Save change"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="#BBE1FA"/>

    </LinearLayout>
</RelativeLayout>