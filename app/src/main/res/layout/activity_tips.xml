<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".TipsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#3282B8"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tips"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#BBE1FA"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="13dp"
                android:backgroundTint="#3282B8"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="0dp"
                app:srcCompat="@drawable/back"
                />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:id="@+id/image_1"
        android:layout_width="412dp"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:background="@drawable/tips1"
        />
    <TextView
        android:id="@+id/rooms_detai"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="102dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="415dp"
        android:text="ROOMS' DETAILS"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#0F4C75"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:id="@+id/you_can_mon"
        android:layout_width="327dp"
        android:layout_height="119dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="455dp"
        android:text="You can monitor the gas concentration in each room and take appropriate actions."
        android:textSize="21dp"
        android:textColor="#0F4C75"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:id="@+id/some_id"
        android:layout_width="128dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="141dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:text="1/2"
        android:textSize="15dp"
        android:textColor="#0F4C75"
        android:gravity="center_horizontal|top"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>