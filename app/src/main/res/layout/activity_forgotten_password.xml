<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ForgottenPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txtResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:gravity="center_horizontal"
            android:text="Reset your password"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtResetPassword"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Provide your account's email for which you want to reset your password!"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="50dp"
            android:background="@drawable/textbox"
            android:hint="Email address"
            android:layout_below="@+id/txtNotification"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/custom_cursor" />

        <ImageButton
            android:id="@+id/btnResetPassword"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginTop="40dp"
            android:layout_width="82dp"
            android:layout_height="42dp"
            android:layout_below="@+id/txt_email"
            android:background="@drawable/layout_button"
            android:backgroundTint="@color/_3282B8"
            app:srcCompat="@drawable/next" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>