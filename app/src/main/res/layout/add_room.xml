<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_addroom"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="47dp"
        android:paddingRight="47dp"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="5dp"
            android:background="@drawable/layout_button"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/background"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room name"
            android:textColor="@color/background"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/txt_roomName"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/layout_button"
            android:backgroundTint="@color/_206796"
            android:paddingLeft="20dp"
            android:textColor="@color/background"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btn_findSensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_button"
            android:text="Find sensor"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="@color/background"
            android:layout_marginBottom="10dp"
            app:backgroundTint="#3282B8" />
        <Button
            android:id="@+id/btn_SaveRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_button"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="22dp"
            android:textColor="@color/background"
            app:backgroundTint="#3282B8" />



    </LinearLayout>
</RelativeLayout>