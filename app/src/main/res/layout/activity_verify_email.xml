<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".VerifyEmailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/sendEmail"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:gravity="center_horizontal"
            android:text="We've sent you an email!"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/checkEmail"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:gravity="center_horizontal"
            android:text="Please check your email and verify your account"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/notReceiveEmail"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkEmail"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:gravity="center_horizontal"
            android:text="If you don't see our email, check your junk folder"
            android:textAlignment="center"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_resendVerifiedEmail"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notReceiveEmail"
            android:background="@drawable/layout_button"
            android:text="Resend verification email"
            android:textAllCaps="false"
            app:backgroundTint="#3282B8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/btn_logOut"
            android:paddingTop="12dp"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:text="Log out"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/layout_signup"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>